---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Blog from '../../components/Blog.astro';

const lang = 'pt';

const breadcrumbItems = [
  { label: 'Home', href: `/${lang}/` },
  { label: 'Blog' }
];
---

<Layout
  lang={lang}
  title="Blog | Mira Marketing - Conteúdos de Marketing Digital"
  description="Conteúdos e insights para acelerar o crescimento do seu negócio. Artigos sobre tráfego pago, branding, SEO e estratégias digitais."
>
  <Header lang={lang} />
  <main>
    <Breadcrumb items={breadcrumbItems} />
    <Blog lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>