---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Services from '../../components/Services.astro';

const lang = 'pt';

const breadcrumbItems = [
  { label: 'Home', href: `/${lang}/` },
  { label: 'Serviços' }
];
---

<Layout
  lang={lang}
  title="Serviços de Marketing Digital | Mira Marketing - Tráfego, Branding e SEO"
  description="Conheça todos os serviços da Mira Marketing: tráfego pago, branding, SEO, desenvolvimento web, automação, CRM e mais. Soluções completas para crescer seu negócio."
>
  <Header lang={lang} />
  <main>
    <Breadcrumb items={breadcrumbItems} />
    <Services lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>