---
interface Props {
  lang: 'pt' | 'es';
}

const { lang } = Astro.props;

import ptHero from '../i18n/pt/hero.json';
import esHero from '../i18n/es/hero.json';

const t = lang === 'pt' ? ptHero : esHero;
---

<section class="relative px-8 py-8 md:px-32 md:py-16 min-h-[80vh] flex items-center overflow-visible" aria-label={t.heroLabel}>
  
  <div class="absolute inset-0 flex items-center justify-center" aria-hidden="true">
    <div class="w-150 h-150 bg-[#0004FF] opacity-5 rounded-full blur-[150px] pulse-glow"></div>
  </div>

  <div class="relative z-10 w-full">
    
    <div class="flex flex-col lg:flex-row lg:items-start lg:gap-8">
      
      <div class="flex-1 min-w-0">
        
        <div class="flex justify-center md:justify-start mb-8 md:mb-16 hero-photos">
          <div class="flex -space-x-4">
            <img src="/team/member-1.jpg" alt={t.team.member1} class="w-8 h-8 md:w-12 md:h-12 rounded-full border-2 border-white object-cover" loading="eager" />
            <img src="/team/member-2.jpg" alt={t.team.member2} class="w-8 h-8 md:w-12 md:h-12 rounded-full border-2 border-white object-cover" loading="eager" />
            <img src="/team/member-3.jpg" alt={t.team.member3} class="w-8 h-8 md:w-12 md:h-12 rounded-full border-2 border-white object-cover" loading="eager" />
            <img src="/team/member-4.jpg" alt={t.team.member4} class="w-8 h-8 md:w-12 md:h-12 rounded-full border-2 border-white object-cover" loading="eager" />
            <img src="/team/member-5.jpg" alt={t.team.member5} class="w-8 h-8 md:w-12 md:h-12 rounded-full border-2 border-white object-cover" loading="eager" />
          </div>
        </div>

        <h1 class="text-2xl md:text-5xl font-bold tracking-tight leading-tight">
  <span class="flex items-center gap-1 md:gap-4">
    <span class="bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent hero-title whitespace-nowrap">{t.title.line1}</span>
    
    <a 
    href={`/${lang}/${t.chatLink}`}
    class="group relative hero-chat shrink-0 hidden md:block"
    aria-label={t.chatBubble}
    >
    <div class="chat-bubble relative rounded-lg md:rounded-2xl transition-transform duration-300 group-hover:scale-105">
    <div class="flex items-center gap-0.5 md:gap-2 px-1 py-0.5 md:px-4 md:py-2">
    <span class="text-[5px] md:text-sm font-medium whitespace-nowrap tracking-normal">{t.chatBubble}</span>
    <svg class="w-1.5 h-1.5 md:w-4 md:h-4 transition-transform duration-300 group-hover:translate-x-1 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
    </svg>
    </div>
    </div>
    </a>
  </span>
  
  <span class="block bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent hero-title-2">{t.title.line2}</span>
</h1>

        <h2 class="text-base md:text-xl font-bold mt-6 hero-subtitle max-w-xl">
          {t.subtitle}
        </h2>

        <div class="mt-8 md:mt-16 flex justify-center md:justify-start hero-button">
          <a href={`/${lang}/${t.chatLink}`} class="contact-button relative rounded-md inline-block">
            <span class="flex items-center justify-center px-8 py-3 rounded-md font-bold text-base md:text-lg">
              {t.contactButton}
            </span>
          </a>
        </div>

        <div class="flex flex-col gap-4 mt-8 lg:hidden">
          
          <div class="stat-card rounded-lg px-4 py-4 flex items-center justify-center gap-2 hero-stat-1">
            <span class="text-2xl font-bold bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent leading-none">{t.stats.projects.number}</span>
            <span class="text-sm leading-tight bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent">
              <span class="block">{t.stats.projects.line1}</span>
              <span class="block">{t.stats.projects.line2}</span>
            </span>
          </div>

          <div class="stat-card rounded-lg px-4 py-4 flex items-center justify-center gap-2 hero-stat-2">
            <span class="text-2xl font-bold bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent leading-none">{t.stats.revenue.number}</span>
            <span class="text-sm leading-tight bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent">
              <span class="block">{t.stats.revenue.line1}</span>
              <span class="block">{t.stats.revenue.line2}</span>
            </span>
          </div>

          <div class="stat-card rounded-lg px-4 py-4 flex items-center justify-center gap-2 hero-stat-3">
            <span class="text-2xl font-bold bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent leading-none">{t.stats.leads.number}</span>
            <span class="text-sm leading-tight bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent">
              <span class="block">{t.stats.leads.line1}</span>
              <span class="block">{t.stats.leads.line2}</span>
            </span>
          </div>

          <div class="stat-card rounded-lg px-4 py-4 flex items-center justify-center gap-2 hero-stat-4">
            <span class="text-2xl font-bold bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent leading-none">{t.stats.roi.number}</span>
            <span class="text-sm leading-tight bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent">
              <span class="block">{t.stats.roi.line1}</span>
              <span class="block">{t.stats.roi.line2}</span>
            </span>
          </div>

        </div>

      </div>

      <div class="hidden lg:flex lg:flex-col lg:gap-8 lg:ml-8 lg:w-64">
        
        <div class="stat-card rounded-lg px-4 py-6 flex items-center justify-center gap-2 hero-stat-1 w-full">
          <span class="text-3xl font-bold bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent leading-none">{t.stats.projects.number}</span>
          <span class="text-sm leading-tight bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent">
            <span class="block">{t.stats.projects.line1}</span>
            <span class="block">{t.stats.projects.line2}</span>
          </span>
        </div>

        <div class="stat-card rounded-lg px-4 py-6 flex items-center justify-center gap-2 hero-stat-2 w-full">
          <span class="text-3xl font-bold bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent leading-none">{t.stats.revenue.number}</span>
          <span class="text-sm leading-tight bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent">
            <span class="block">{t.stats.revenue.line1}</span>
            <span class="block">{t.stats.revenue.line2}</span>
          </span>
        </div>

        <div class="stat-card rounded-lg px-4 py-6 flex items-center justify-center gap-2 hero-stat-3 w-full">
          <span class="text-3xl font-bold bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent leading-none">{t.stats.leads.number}</span>
          <span class="text-sm leading-tight bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent">
            <span class="block">{t.stats.leads.line1}</span>
            <span class="block">{t.stats.leads.line2}</span>
          </span>
        </div>

        <div class="stat-card rounded-lg px-4 py-6 flex items-center justify-center gap-2 hero-stat-4 w-full">
          <span class="text-3xl font-bold bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent leading-none">{t.stats.roi.number}</span>
          <span class="text-sm leading-tight bg-linear-to-r from-[#0004FF] to-[#FF0A0A] bg-clip-text text-transparent">
            <span class="block">{t.stats.roi.line1}</span>
            <span class="block">{t.stats.roi.line2}</span>
          </span>
        </div>

      </div>

    </div>

  </div>

</section>

<style>
  .stat-card,
  .chat-bubble,
  .contact-button {
    position: relative;
    background: transparent;
  }

  .stat-card::before,
  .chat-bubble::before,
  .contact-button::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 2px;
    background: linear-gradient(to right, #0004FF, #FF0A0A);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(1.25rem);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(1.875rem);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-0.3125rem);
    }
  }

  .hero-photos {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.1s forwards;
  }

  .hero-title {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.3s forwards;
  }

  .hero-title-2 {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.5s forwards;
  }

  .hero-chat {
    opacity: 0;
    animation: fadeInUp 2.5s ease-out 1.8s forwards;
  }

  .hero-chat.float-active {
    opacity: 1;
    animation: float 3s ease-in-out infinite;
  }

  .hero-subtitle {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.7s forwards;
  }

  .hero-button {
    opacity: 0;
    animation: fadeInUp 0.6s ease-out 0.9s forwards;
  }

  .hero-stat-1 {
    opacity: 0;
    animation: fadeInRight 0.5s ease-out 1.1s forwards;
  }

  .hero-stat-2 {
    opacity: 0;
    animation: fadeInRight 0.5s ease-out 1.25s forwards;
  }

  .hero-stat-3 {
    opacity: 0;
    animation: fadeInRight 0.5s ease-out 1.4s forwards;
  }

  .hero-stat-4 {
    opacity: 0;
    animation: fadeInRight 0.5s ease-out 1.55s forwards;
  }

  @keyframes pulseGlow {
    0%, 100% {
      opacity: 0.05;
      transform: scale(1);
    }
    50% {
      opacity: 0.08;
      transform: scale(1.1);
    }
  }

  .pulse-glow {
    animation: pulseGlow 4s ease-in-out infinite;
  }
</style>

<script>
  const chatBubble = document.querySelector('.hero-chat') as HTMLElement | null;
  
  setTimeout(() => {
    if (chatBubble) {
      chatBubble.style.opacity = '1';
      chatBubble.classList.add('float-active');
    }
  }, 4300);
</script>