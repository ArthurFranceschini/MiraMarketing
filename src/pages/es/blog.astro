---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import Blog from '../../components/Blog.astro';

const lang = 'es';

const breadcrumbItems = [
  { label: 'Inicio', href: `/${lang}/` },
  { label: 'Blog' }
];
---

<Layout
  lang={lang}
  title="Blog | Mira Marketing - Contenidos de Marketing Digital"
  description="Contenidos e insights para acelerar el crecimiento de tu negocio. Artículos sobre tráfico pago, branding, SEO y estrategias digitales."
>
  <Header lang={lang} />
  <main>
    <Breadcrumb items={breadcrumbItems} />
    <Blog lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>