---
interface Props {
  image: string;
  imageAlt: string;
  name: string;
  description: string;
  tags: string[];
  slug: string;
  lang: 'pt' | 'es';
}

const { image, imageAlt, name, description, tags, slug, lang } = Astro.props;
---

<a 
  href={`/${lang}/cases/${slug}`}
  class="case-card block rounded-lg overflow-hidden fade-in transition-transform duration-500"
>
  <div class="p-4 md:p-8">
    <img 
      src={image} 
      alt={imageAlt}
      class="w-full h-48 md:h-64 object-cover rounded-lg"
      loading="lazy"
      decoding="async"
    />
    
    <h3 class="text-sm md:text-xl mt-4 md:mt-8">{name}</h3>
    
    <p class="text-[0.5rem] md:text-base font-bold mt-1 md:mt-2">{description}</p>
    
    <div class="flex flex-wrap gap-2 md:gap-4 mt-1 md:mt-2">
      {tags.map((tag) => (
        <span class="text-[0.5rem] md:text-xs font-light">{tag}</span>
      ))}
    </div>
  </div>
</a>

<style>
  .case-card {
    position: relative;
    background: transparent;
  }

  .case-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 2px;
    background: linear-gradient(to right, #0004FF, #FF0A0A);
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    pointer-events: none;
  }

  .case-card:hover {
    transform: scale(1.02);
  }

  .case-card.shrink {
    transform: scale(0.95);
  }
</style>