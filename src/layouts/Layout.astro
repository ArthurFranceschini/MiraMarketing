---
import '../styles/app.css';

interface Props {
  lang: 'pt' | 'es';
  title: string;
  description?: string;
  image?: string;
}

const { lang, title, description = 'Mira Marketing', image = '/og-image.jpg' } = Astro.props;

const siteUrl = 'https://miramarketing.com';
const currentPath = Astro.url.pathname;
const currentUrl = `${siteUrl}${currentPath}`;
const ptUrl = currentUrl.replace(/\/(es|pt)\//, '/pt/');
const esUrl = currentUrl.replace(/\/(es|pt)\//, '/es/');
const fullImageUrl = image.startsWith('http') ? image : `${siteUrl}${image}`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Mira Marketing" />
    <meta name="theme-color" content="#0004FF" />
    
    <link rel="canonical" href={currentUrl} />
    <link rel="alternate" hreflang="pt-BR" href={ptUrl} />
    <link rel="alternate" hreflang="es-ES" href={esUrl} />
    <link rel="alternate" hreflang="x-default" href={`${siteUrl}/pt/`} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
    
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={fullImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={lang === 'pt' ? 'pt_BR' : 'es_ES'} />
    <meta property="og:locale:alternate" content={lang === 'pt' ? 'es_ES' : 'pt_BR'} />
    <meta property="og:site_name" content="Mira Marketing" />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={currentUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullImageUrl} />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body class="font-[Comfortaa,sans-serif]">
    <slot />
  </body>
</html>