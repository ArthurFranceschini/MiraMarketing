---
import Header from '../../components/Header.astro';
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import About from '../../components/About.astro';
import Cases from '../../components/Cases.astro';
import Services from '../../components/Services.astro';
import Footer from '../../components/footer.astro';
import Blog from '../../components/Blog.astro';

const lang = 'es';

const schemaData = {
  "@context": "https://schema.org",
  "@type": "MarketingAgency",
  "name": "Mira Marketing",
  "url": "https://miramarketing.com/es/",
  "logo": "https://miramarketing.com/logo.svg",
  "description": "Agencia de marketing digital en la frontera Brasil-Paraguay. Estrategias digitales que hacen crecer tu negocio.",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Foz do Iguaçu",
    "addressRegion": "PR",
    "addressCountry": "BR"
  },
  "areaServed": ["Brasil", "Paraguay"],
  "serviceType": ["Marketing Digital", "Tráfico Pago", "Branding", "SEO", "Desarrollo Web", "Automatización"],
  "priceRange": "$$",
  "sameAs": [
    "https://instagram.com/maboramira",
    "https://linkedin.com/company/maboramira"
  ]
};
---

<Layout
  lang={lang}
  title="Mira Marketing | Agencia de Marketing Digital en la Frontera Brasil-Paraguay"
  description="Agencia de marketing digital en Foz do Iguaçu. Estrategias de tráfico pago, branding, SEO y automatización que generan resultados reales para tu negocio."
>
  <Header lang={lang} />
  <main>
    <Hero lang={lang} />
    <About lang={lang} />
    <Cases lang={lang} />
    <Services lang={lang} />
    <Blog lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>

<script type="application/ld+json" set:html={JSON.stringify(schemaData)} />