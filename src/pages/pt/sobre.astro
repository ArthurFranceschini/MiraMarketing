---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/footer.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import AboutUs from '../../components/AboutUs.astro';

const lang = 'pt';

const breadcrumbItems = [
  { label: 'Home', href: `/${lang}/` },
  { label: 'Sobre Nós' }
];
---

<Layout
  lang={lang}
  title="Sobre Nós | Mira Marketing - Agência de Marketing Digital"
  description="Conheça a Mira Marketing: agência de marketing digital focada em resultados reais. Estratégia, dados e execução para crescer seu negócio de forma previsível e escalável."
>
  <Header lang={lang} />
  <main>
    <Breadcrumb items={breadcrumbItems} />
    <AboutUs lang={lang} />
  </main>
  <Footer lang={lang} />
</Layout>